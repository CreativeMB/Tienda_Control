<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo personalizado para botones -->
    <style name="Widget.AppTheme.Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">180dp</item>
         <item name="android:textSize">18sp</item>
    </style>

    <style name="MenuItemTextStyle">
        <item name="android:textSize">25sp</item> <!-- Ajusta el tamaño del texto aquí -->
    </style>
    <!-- Tema para diálogos transparentes -->
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- Para evitar el oscurecimiento del fondo -->
    </style>

</resources>