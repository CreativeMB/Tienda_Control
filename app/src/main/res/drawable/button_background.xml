<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Degradado de color -->
    <gradient
        android:startColor="#00BFA5"
        android:endColor="#0091EA"
        android:angle="90" /> <!-- Aplica un degradado de color -->

    <!-- Radio de las esquinas -->
    <corners android:radius="5dp" />

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Borde -->
    <stroke
        android:width="1dp"
        android:color="#B1000000" />
</shape>