<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="24dp"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="16dp">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/nav_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/icono"
                android:contentDescription="Imagen de la empresa"/>

            <!-- Nombre de la empresa -->
            <TextView
                android:id="@+id/nav_empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la empresa"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <!-- Persona encargada -->
            <TextView
                android:id="@+id/nav_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encargado"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Email -->
            <TextView
                android:id="@+id/nav_header_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <!-- Dirección -->
            <TextView
                android:id="@+id/nav_direcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Ciudad -->
            <TextView
                android:id="@+id/nav_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- País -->
            <TextView
                android:id="@+id/nav_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="País"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Teléfono -->
            <TextView
                android:id="@+id/nav_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tienda Control Pro V1.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>