<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout2"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/Buton"
                android:textSize="25dp"
                android:text="Nuevo Ingreso" />

            <Spinner
                android:id="@+id/spinnerPredefined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/viewProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Producto" />

            <EditText
                android:id="@+id/txtProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:labelFor="@+id/viewProducto"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/viewValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Valor" />

            <EditText
                android:id="@+id/txtValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:labelFor="@+id/viewValor"
                android:focusable="false"
                android:inputType="none"
                android:clickable="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/viewDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Detalles" />

            <EditText
                android:id="@+id/txtDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:labelFor="@+id/viewDetalles"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/viewCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Cantidad" />

            <EditText
                android:id="@+id/txtCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:labelFor="@+id/viewCantidad"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/selector_background"
                    android:text="@string/registrar"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/texGuardarPredefinido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_background"
                    android:text="@string/guardar"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/texEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Eliminar el Items Guardado" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>